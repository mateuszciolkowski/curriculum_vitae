                <p
                  className={`text-[10px] uppercase tracking-widest font-black mb-2 ${
                    activeHackathonId === hack.id
                      ? "text-slate-950/60"
                      : "text-cyan-500"
                  }`}
                >
                  {t(hack.role)}
                </p>
                <p className="text-sm md:text-base font-black uppercase leading-tight">
                  {hack.name}
                </p>
              </button>
            ))}
          </div>
